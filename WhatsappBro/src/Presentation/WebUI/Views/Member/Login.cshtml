@{
    ViewData["Title"] = "WhatsappBro - Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-login">
    <div class="card-login__header">
        <h2>WhatsappBro</h2>
    </div>
    <div class="card-login__body">
        <form method="post" action="/Member/Login"  class="container-fluid d-flex flex-column gap-3">
           @Html.AntiForgeryToken()
            <div class="row">
                <label for="username">Kullanıcı adı</label>
                <input type="text" name="UserName" class="form-control mt-1" />
            </div>
            <div class="row">
                <label for="username">Parola</label>
                <input type="password" name="Password" class="form-control mt-1" />
            </div>
            <div class="row d-flex justify-content-left">
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
            </div>
        </form>
        <div class="mt-3">
            <div class="d-flex justify-content-between">
                <button class="btn btn-sm btn-link text-decoration-none">Parolamı Unuttum</button>
                <a href="/Member/Register" class="btn btn-sm btn-link text-decoration-none">Kayıt Ol</a>
            </div>
        </div>
    </div>
</div>