@{
    ViewData["Title"] = "WhatsappBro - Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
<div class="card-login">
    <div class="card-login__header">
        <h2>Kayıt Ol</h2>
    </div>
    <div class="card-login__body">
        <form method="post" action="/member/register" class="container-fluid d-flex flex-column gap-3" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="row">
                <label for="username">Kullanıcı adı</label>
                <input type="text" name="Username" class="form-control mt-1" />
            </div>
            <div class="row">
                <label for="username">E-Posta Adresi</label>
                <input type="text" name="Email" class="form-control mt-1" />
            </div>
            <div class="row">
                <label for="username">Parola</label>
                <input type="password" name="Password" class="form-control mt-1" />
            </div>
            <div class="row">
                <label for="image">Profil Resminiz</label>
                <input type="file" name="Image" />
            </div>
            <div class="row d-flex justify-content-left">
                <button class="btn btn-primary">Kayıt Ol</button>
            </div>
        </form>
        <div class="mt-3">
            <div class="d-flex justify-content-end">
                <a href="/Member/Login" class="btn btn-sm btn-link text-decoration-none">Giriş'e Git</a>
            </div>
        </div>
    </div>
</div>